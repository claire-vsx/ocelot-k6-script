# ===========================================
# K6 ClassSwift 負載測試 - 環境變數範例
# ===========================================
# 複製此檔案為 .env.local 並填入實際值
# cp .env.example .env.local

# === API 設定 ===
export API_URL=http://localhost:8000
export SOCKET_URL=http://localhost:8000

# === 認證 (必填) ===
export TEACHER_TOKEN=your-jwt-token-here
export TEACHER_WS_TOKEN=your-websocket-token-here

# === 組織資訊 (必填) ===
export ORG_ID=your-org-id-here
export TEACHER_ID=your-teacher-id-here

# === 教室設定 ===
# multi-room / load-test 使用
export NUM_ROOMS=2
export STUDENTS_PER_ROOM=50

# specified-one-room 使用
export NUM_STUDENTS=50
export ROOM_ID=your-room-id-here

# === Quiz 設定 ===
export COLLECTION_ID=your-collection-id-here

# === 時間設定 (秒) ===
export TEACHER_DELAY=30
export STUDENT_SESSION_TIME=90
export STUDENT_WAIT_TIME=60

# === Load-Test 設定 ===
export LESSON_DURATION=20
export QUIZ_COUNT=4
export QUIZ_INTERVAL=4

# === 其他 ===
export DISPLAY_NAME=Teacher
export REGION=TW

# === Prometheus 輸出設定 ===
export K6_PROMETHEUS_RW_SERVER_URL=http://localhost:9090/api/v1/write
export K6_PROMETHEUS_RW_TREND_AS_NATIVE_HISTOGRAM=true
